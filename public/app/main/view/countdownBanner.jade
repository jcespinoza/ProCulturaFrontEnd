block countdown-banner
    .banner
        .container
            .center
                h1.title {{L10N.countdownBannerTitle}}
                p {{L10N.countdownBannerSubtitle}}
                // Clock
                .clock.clearfix
                    .clock-item.clock-days
                        .wrap
                            .inner
                                #canvas-days.clock-canvas
                                .clock-content
                                    p.val 9
                                    strong.typ.type-days(style='color: white') {{L10N.days}}
                    .clock-item.clock-hours
                        .wrap
                            .inner
                                #canvas-hours.clock-canvas
                                .clock-content
                                    p.val 0
                                    p.typ.type-hours {{L10N.hours}}
                    .clock-item.clock-minutes
                        .wrap
                            .inner
                                #canvas-minutes.clock-canvas
                                .clock-content
                                    p.val 0
                                    p.typ.type-minutes {{L10N.minutes}}
                    .clock-item.clock-seconds
                        .wrap
                            .inner
                                #canvas-seconds.clock-canvas
                                .clock-content
                                    p.val 0
                                    p.typ.type-seconds {{L10N.seconds}}