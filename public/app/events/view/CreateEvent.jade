section.sub-banner.newsection
    .container
        h2.title Crear Evento
// Contact
.contact.newsection
    .container
        .row
            .col-md-6.col-sm-6
                form#contactform(name="CreateEvent", method='post', ng-submit='createEvent()')
                    p
                        label
                            | Nombre del Evento
                            span *
                        input#contactname.textflied(type='text', ng-model='event.name', required)
                        i.icon.fa.fa-user
                    p
                        label
                            | Descripcion Corta
                            span *
                        input#subject.textflied(type='text', ng-model='event.shortDescription', required)
                        i.icon.fa.fa-edit
                    p
                        label
                            | Lugar
                            span *
                        input#email.textflied(type='text', ng-model='event.location', required)
                        i.icon.fa.fa-map-marker
                    p
                        label
                            | Fecha de Inicio
                            span *
                        i.icon.fa.fa-calendar
                        input#contactname.textflied(type='datetime-local', ng-model='event.beginDate', required)
                    p
                        label
                            | Fecha de Culminacion
                        input#contactname.textflied(type='datetime-local', name='event.endDate')
                        i.icon.fa.fa-clock-o
                    p
                        label
                            | Descripcion Larga
                        textarea#message.texttextarea(type='text', ng-model='event.longDescription', placeholder='Descripcion del Evento', rows='8')
                        i.icon.fa.fa-comments
                    p
                        button#submitButton.btn.btn-disabled(type='submit', title='Crear Evento') CREAR EVENTO
            .col-md-6.col-sm-6
                // Map
                .map-container
                    h2.title Localidad
                    #contact-map.map
                // Contact Info
                .contactinfo
                    h2.title Informacion del Organizador
                    ul.clearfix
                        li.clearfix
                            span.titles Direccion:
                            span.content
                                | 1600 Pennsylvania Ave NW, Washington, D.C., DC
                                br
                                |  20500, ABD
                        li.clearfix
                            span.titles TEL :
                            span.content +90 555 55 55
                        li.clearfix
                            span.titles CEL :
                            span.content +90 777 77 77
                        li.clearfix
                            span.titles Email :
                            span.content
                                a(href='#') info@example.com
                        li.clearfix
                            span.titles Staff :
                            span.content
                                a(href='#') support@example.com
                    // Social Icon
                    .social-icon
                        a.facebook.fa.fa-facebook(href='#')
                        a.twitter.fa.fa-twitter(href='#')
                        a.googleplus.fa.fa-google-plus(href='#')
                        a.linkedin.fa.fa-linkedin(href='#')
