section.sub-banner.newsection
    .container
        h2.title {{L10N.createEventTitle}}
// Contact
.contact.newsection
    .container
        .row
            .col-md-6.col-sm-6
                form#contactform(name="CreateEvent", method='post', ng-submit='createEvent()')
                    p
                        div.tooltip-bottom(data-tooltip='{{L10N.eventNameTooltip}}')
                            label
                                | {{L10N.eventName}}
                                span *
                            input.textflied(type='text', ng-model='event.Name', required)
                            i.icon-abs.fa.fa-user
                    p
                        div.tooltip-bottom(data-tooltip='{{L10N.shortDescription}}')
                            label
                                | {{L10N.shortDescription}}
                                span *
                            input.textflied(type='text', ng-model='event.ShortDescription', required)
                            i.icon-abs.fa.fa-edit
                    p
                        div.tooltip-bottom(data-tooltip='{{L10N.locationTooltip}}')
                            label
                                | {{L10N.location}}
                                span *
                            input.textflied(type='text', ng-model='event.Location', required)
                            i.icon-abs.fa.fa-map-marker
                    p
                        div.tooltip-bottom(data-tooltip='{{L10N.imageUrlTooltip}}')
                            label
                                | {{L10N.imageUrl}}
                            input.textflied(type='text', ng-model='event.ImageUrl')
                            i.icon-abs.fa.fa-image(style="color: brown")
                    .row
                        .col-md-6.col-sm-6
                            label
                                | {{L10N.beginDate}}
                                span *
                        .col-md-6.col-sm-6
                            label
                                | {{L10N.beginTime}}
                    .row
                        .col-md-6.col-sm-6
                            div.tooltip-bottom(data-tooltip='{{L10N.beginDateTooltip}}')
                                input.textfliedCalendar(type='date', ng-model='event.BeginDate', required)
                        .col-md-6.col-sm-6
                            div.tooltip-bottom(data-tooltip='{{L10N.beginTimeTooltip}}')
                                input.textfliedCalendar(type='time', value = '00:00')
                    br
                    .row
                        .col-md-6.col-sm-6
                            label
                                | {{L10N.endDate}}
                        .col-md-6.col-sm-6
                            label
                                | {{L10N.endTime}}
                    .row
                        .col-md-6.col-sm-6
                            div.tooltip-bottom
                                input.textfliedCalendar(type='date', ng-model='event.EndDate')
                        .col-md-6.col-sm-6
                            div.tooltip-bottom
                                input.textfliedCalendar(type='time', value = '00:00')
                    p
                        div.tooltip-bottom(data-tooltip='{{L10N.longDescriptionTooltip}}')
                            label
                                | {{L10NlongDescription}}
                                span *
                            textarea.texttextarea(type='text', ng-model='event.LongDescription', placeholder='Descripcion del Evento', rows='8', required)
                            i.icon-abs.fa.fa-comments(style="color: orange")
                    p
                    .div(ng-show='!isProcessing')
                        button#submitButton.btn.btn-disabled(type='submit') {{L10N.createButton}}
                    .div(ng-show='isProcessing')
                        .loader
                            h1 {{L10N.loaderMessage}}
                            span
                            span
                            span
            .col-md-6.col-sm-6
                // Map
                .map-container
                    h2.title {{L10N.locationTitle}}
                    #contact-map.map
                // Contact Info
                .contactinfo
                    h2.title Informacion del Organizador
                    ul.clearfix
                        li.clearfix
                            span.titles Direccion:
                            span.content
                                | 1600 Pennsylvania Ave NW, Washington, D.C., DC
                                br
                                |  20500, ABD
                        li.clearfix
                            span.titles TEL :
                            span.content +90 555 55 55
                        li.clearfix
                            span.titles CEL :
                            span.content +90 777 77 77
                        li.clearfix
                            span.titles Email :
                            span.content
                                a(href='#') info@example.com
                        li.clearfix
                            span.titles Staff :
                            span.content
                                a(href='#') support@example.com
                    // Social Icon
                    .social-icon
                        a.facebook.fa.fa-facebook(href='#')
                        a.twitter.fa.fa-twitter(href='#')
                        a.googleplus.fa.fa-google-plus(href='#')
                        a.linkedin.fa.fa-linkedin(href='#')