html
   body
      div
         .container
            form.form-login(ng-submit="createUser(user)")
               h2.form-login-heading(style='color: black')
                  i.fa.fa-pencil-square-o.fa-2x(style='color: white')
                  |   registrate a
                  strong(style='color: red')  ProCultura
               .login-wrap
                  //.input-group
                  //   strong#basic-addon1.input-group-addon
                  //      i.fa.fa-user(style='color: black')
                  //   input.form-control(input type="text", ng-model="user.userName",required ,placeholder='Usuario', aria-describedby='basic-addon1')
                  //br
                  .input-group
                     strong#basic-addon1.input-group-addon
                        i.fa.fa-font(style='color: black')
                     input.form-control(type='text', ng-model="user.name", required placeholder='Nombre Completo', aria-describedby='basic-addon1')
                  br
                  .input-group
                     strong#basic-addon1.input-group-addon
                        i.fa.fa-at(style='color: black')
                     input.form-control(input type="email", ng-model="user.email", required, placeholder='Email', aria-describedby='basic-addon1')
                  hr
                  .input-group
                     strong#basic-addon1.input-group-addon
                        i.fa.fa-lock(style='color: black')
                     input.form-control(input type="password", ng-model="user.password", pattern="^[a-zA-Z0-9]{8,}$", required, title="8 Alphanumeric characters minimum", placeholder='Contraseña', aria-describedby='basic-addon1')
                  br
                  .input-group
                     strong#basic-addon1.input-group-addon
                        i.fa.fa-key(style='color: black')
                     input.form-control(input type="password",ng-model="user.ConfirmPassword" , ng-change="ConfirmPassword()", required, pattern="^[a-zA-Z0-9]{8,}$", title="8 Alphanumeric characters minimum", id="passConfirmed", placeholder='Confirmar Contraseña',  aria-describedby='basic-addon1')
                  hr
                  button.btn.btn-warning.btn-block(type='submit',ng-Submit="validateUser(user)", value="Create Account")
                     i.fa.fa-unlock
                     |  REGISTRAR
