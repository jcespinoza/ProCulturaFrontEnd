div
   .container

      // Modal Dialog
      .modal.fade(data-backdrop='static', data-keyboard='false', tabindex='-1', role='dialog', aria-hidden='true', style='padding-top:30%; overflow-y:visible;')
      .modal-dialog.modal-m(ng-show='isProcessing')
        .modal-content
          .modal-header
            h3(style='margin:0;')
          .modal-body
            .progress.progress-striped.active(style='margin-bottom:0;')
              .progress-bar(style='width: 100%')
      // End Modal dialog

      form.form-login(ng-submit="createUser()" name='signupForm')
         h2.form-login-heading(style='color: black')
            i.fa.fa-pencil-square-o.fa-2x(style='color: white')
            |   registrate a
            strong(style='color: red')  ProCultura
         .login-wrap
            .input-group
               strong#basic-addon1.input-group-addon
                  i.fa.fa-font(style='color: black')
               input.form-control(type='text', ng-model="user.name", required placeholder='Nombre Completo', aria-describedby='basic-addon1')
            br
            .input-group
               strong#basic-addon1.input-group-addon
                  i.fa.fa-at(style='color: black')
               input.form-control(input type="email", ng-model="user.email", required, placeholder='Email', aria-describedby='basic-addon1')
            hr
            .input-group
               strong#basic-addon1.input-group-addon
                  i.fa.fa-lock(style='color: black')
               input.form-control(input type="password",ng-change="confirmPassword()", ng-model="user.password", ng-pattern="^[a-zA-Z0-9]{8,}$", required, title="8 Alphanumeric characters minimum", placeholder='Contraseña', aria-describedby='basic-addon1')
            br
            .input-group
               strong#basic-addon1.input-group-addon
                  i.fa.fa-lock(style='color: black')
               input.form-control(input type="password",ng-model='user.confirmPassword' , ng-change="confirmPassword()", required, ng-pattern="^[a-zA-Z0-9]{8,}$", title="8 Alphanumeric characters minimum", id="passConfirmed", placeholder='Confirmar Contraseña',  aria-describedby='basic-addon1')
            br
            
            p(style="text-align: center; color: red", ng-show='showErrorMessage')

               | Los passwords no coinciden
            p(style="text-align: center; color: green", ng-show='!showErrorMessage')
               | Los passwords coinciden
           
           

            hr
            button.btn.btn-warning.btn-block(type='submit', ng-disabled="signupForm.$invalid", value="Create Account")
               i.fa.fa-unlock
               |  REGISTRAR
      // END FORM
            p(style="text-align:center;color:red", ng-show="showErrorMessage")
               | No Se pudo crear el usuario